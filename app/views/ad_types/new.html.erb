<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", ad_types_path  %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_ad_type_path %></li>
    </ul>
  </div>          
  <div class="content">            
    <h2 class="title"><%= t("web-app-theme.new", :default => "New")%> Ad Type</h2>
    <div class="inner">
      <%= form_for :ad_type, :url => ad_types_path, :html => { :class => :form } do |f| -%>
        
        <div class="group">
          <%= f.label :name, t("activerecord.attributes.ad.title", :default => "Name"), :class => :label %>
          <%= f.text_field :name, :class => 'text_field' %>
          <span class="description">Ex: a simple text</span>
        </div>
              
        <div class="group navform wat-cf">
          <button class="button" type="submit">
            <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
          </button>

          <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
          <%= link_to t("web-app-theme.cancel", :default => "Cancel"), ad_types_path, :class => "text_button_padding link_button" %>
        </div>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'ads/sidebar') -%>