<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", ad_types_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_ad_type_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Types</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>
            <%= t("activerecord.attributes.type.name", :default => t("activerecord.labels.name", :default => "Name")) %>
          </th>
          <th>
            <%= t("activerecord.attributes.type.name", :default => t("activerecord.labels.name", :default => "Created at")) %>
          </th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @types.each do |type| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= type.id %>
          </td>
          <td>
            <%= type.name %>
          </td>
          <td>
            <%= type.created_at %>
          </td>
          <td class="last">
            <% if (can? :ad_types, :AdminSection) && type.can_delete? %>
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", type, :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
            <% end %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
        <%= will_paginate @types  %>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'ads/sidebar') -%>
