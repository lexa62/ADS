<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.admin.title", :default => t("activerecord.labels.title", :default => "Title")) %>:</b>
          <%= @ad.title %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin.text", :default => t("activerecord.labels.text", :default => "Text")) %>:</b>
          <%= @ad.text %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin.status", :default => t("activerecord.labels.status", :default => "Status")) %>:</b>
          <%= @ad.status %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin.ad_type_id", :default => t("activerecord.labels.ad_type_id", :default => "Ad type")) %>:</b>
          <%= @ad.ad_type_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin.user_id", :default => t("activerecord.labels.user_id", :default => "User")) %>:</b>
          <%= @ad.user_id %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_path(@ad), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_path(@ad), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>