.block
  .secondary-navigation
    ul.wat-cf
      li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_ad_types_path
      li.active= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_ad_type_path
  .content
    h2.title
      = t("web-app-theme.new", :default => "New")
      |  Ad Type
    .inner
      - if @ad_type.errors.any?
        .alert.alert-error
          ul
            - @ad_type.errors.full_messages.each do |msg|
              li= msg
      = simple_form_for @ad_type, :url => admin_ad_types_path, :html => { :class => :form } do |f|
        .group
          = f.label :name, t("activerecord.attributes.ad.title", :default => "Name"), :class => :label
          = f.text_field :name, :class => 'text_field'
          span.description Ex: a simple text
        .group.navform.wat-cf
          button.button type="submit"
            = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
            = t("web-app-theme.save", :default => "Save")
          span.text_button_padding= t("web-app-theme.or", :default => "or")
          = link_to t("web-app-theme.cancel", :default => "Cancel"), admin_ad_types_path, :class => "text_button_padding link_button"
- content_for :sidebar, render(:partial => 'ads/sidebar')
