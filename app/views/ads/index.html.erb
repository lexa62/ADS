<h1>Listing Ads</h1>
 
<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active">
        <%= link_to "#{t("web-app-theme.list", :default => "List")}", ads_path %>
      </li>
      <li>
        <%= link_to "#{t("web-app-theme.new", :default => "New")}", new_ad_path %>
      </li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title">
      <%= t("web-app-theme.all", :default => "All") %>
      Blog Entries
    </h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first">ID</th>
          <th>
            <%= t("activerecord.attributes.ad.subject", :default => t("activerecord.labels.subject", :default => "Title")) %>
          </th>
          <th>
            <%= t("activerecord.attributes.ad.subject", :default => t("activerecord.labels.subject", :default => "Text")) %>
          </th>
          <th>
            <%= t("activerecord.attributes.ad.subject", :default => t("activerecord.labels.subject", :default => "Type")) %>
          </th>
          <th>
            <%= t("activerecord.attributes.ad.subject", :default => t("activerecord.labels.subject", :default => "Status")) %>
          </th>
          <th>
            <%= t("web-app-theme.created_at", :default => "Created at") %>
          </th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @ads.each do |ad| %>
          <tr class="<%= cycle("odd", "even") %>">
            <td>
              <%= ad.id %>
            </td>
            <td>
              <%= link_to ad.title, ad_path(ad) %>
            </td>
            <td>
              <%= ad.text %>
            </td>
            <td>
              <%= ad.ad_type.name %>
            </td>
            <td>
              <%= ad.status %>
            </td>
            <td>
              <%= ad.created_at %>
            </td>
            <td class="last">
              <%= link_to "#{t("web-app-theme.show", :default => "Show")}", ad %>
              <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_ad_path(ad) %>
              <%= link_to "#{t("web-app-theme.delete", :default => "Remove")}", ad, :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
            </td>
          </tr>
        <% end %>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions"></div>
        <%= will_paginate @ads %>
      </div>
    </div>
  </div>
</div>