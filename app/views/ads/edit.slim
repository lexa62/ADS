.block
  .secondary-navigation
    ul.wat-cf
      li.first= link_to "#{t("web-app-theme.list", :default=>"List")}", my_ads_path
      li= link_to "#{t("web-app-theme.new", :default=>"New")}", new_ad_path
      li.active= link_to "#{t("web-app-theme.edit", :default=>"Edit")}", edit_ad_path
  .content
    h2.title
      => t("web-app-theme.edit", :default => "Edit")
      | Ad
    .inner
      = nested_form_for @ad, :url => ad_path, :html => { :multipart => true, :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
